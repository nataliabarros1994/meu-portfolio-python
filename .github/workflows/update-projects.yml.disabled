name: Update Projects Daily

on:
  schedule:
    # Executa diariamente Ã  meia-noite (UTC)
    - cron: '0 0 * * *'
  workflow_dispatch:  # Permite execuÃ§Ã£o manual

permissions:
  contents: write

jobs:
  update-projects:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ“¥ Checkout cÃ³digo
        uses: actions/checkout@v4

      - name: ğŸ Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'
          cache: 'pip'

      - name: ğŸ“¦ Instalar dependÃªncias
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: ğŸ”„ Buscar novos projetos do GitHub
        run: |
          echo "ğŸ” Buscando projetos do GitHub..."
          python build_portfolio.py --force
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: â„ï¸  Regenerar site estÃ¡tico
        run: |
          echo "ğŸ”¨ Gerando site estÃ¡tico..."
          python freeze.py

      - name: ğŸ“Š Verificar mudanÃ§as
        id: check_changes
        run: |
          if [[ -n $(git status -s) ]]; then
            echo "changes=true" >> $GITHUB_OUTPUT
            echo "âœ… MudanÃ§as detectadas!"
          else
            echo "changes=false" >> $GITHUB_OUTPUT
            echo "â„¹ï¸  Nenhuma mudanÃ§a detectada"
          fi

      - name: ğŸ’¾ Commit e Push
        if: steps.check_changes.outputs.changes == 'true'
        run: |
          git config --local user.email "github-actions[bot]@users.noreply.github.com"
          git config --local user.name "github-actions[bot]"
          git add docs/ projects_data.json static/data/projects.json
          git commit -m "ğŸ¤– Auto-update: Projetos atualizados $(date +'%Y-%m-%d %H:%M')"
          git push

      - name: âœ… AtualizaÃ§Ã£o completa
        if: steps.check_changes.outputs.changes == 'true'
        run: |
          echo "âœ¨ Projetos atualizados e site republicado!"
          echo "ğŸŒ https://nataliabarros1994.github.io/portfolio-python/"

      - name: â„¹ï¸  Sem mudanÃ§as
        if: steps.check_changes.outputs.changes == 'false'
        run: |
          echo "â„¹ï¸  Nenhum projeto novo ou atualizado"
